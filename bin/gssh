#!/usr/bin/env python
#
# Name:			handle
# Description:	keep connection to webservice
#

import sys, os, time, thread, socket, json, uuid, crypt, getpass, spwd
import logging.handlers, logging
from threading import Thread
from gsh import Server
from gsh import Request
# Deafults
LOG_FILENAME = "/var/log/gshd.log"
LOG_LEVEL = logging.INFO  # Could be e.g. "DEBUG" or "WARNING"


# Make a class we can use to capture stdout and sterr in the log
class MyLogger(object):
	def __init__(self, logger, level):
		"""Needs a logger and a logger level."""
		self.logger = logger
		self.level = level
 
	def write(self, message):
		# Only log if there is a message (not just a new line)
		if message.rstrip() != "":
			self.logger.log(self.level, message.rstrip())
 

class Handle():
	"""Handle keep conect with server"""
	def __init__(self):
		self.request = Request()
		self.connection = None
		try:
			self.mac = ':'.join(['{:02x}'.format((uuid.getnode() >> i) & 0xff) for i in range(0,8*6,8)][::-1])
		except:
			self.mac = str(hex(uuid.getnode()))
	def reconnect(self):
		i = 1
		while not self.connection and i <= 5:
			print "reconnect to server..."
			time.sleep(2 * i)
			self.connection = self.connect()
			i +=1
		if i >5:
			return False
		return True
		
	def process(self, data):
		if 'response' in data:
			if data["response"] == "FIN":
				print "logout..."
				return False
			if data["response"] == "bind":
				connbind = Server(data["session"])
				connbind.start()
		return True
	def ping_server(self, sec):
		while True:
			try:
				time.sleep(sec)
				self.connection.send_obj({"request": "ping"})
			except:
				if not self.reconnect():
					os._exit(1)
				
	def connect(self):
		connection = self.request.authentication()
		if not connection:
			connection = self.request.authnetwork()
		else:
			c = self.request.authnetwork()
			if c:
				c.close()
		if connection:
			return connection
		return False
	def run(self):
		self.connection = self.connect()
		if not self.connection:
			if not self.reconnect():
				os._exit(1)
		thread.start_new_thread(self.ping_server, (25,))
		while True:
			data = self.connection.read_obj()
			self.process(data)
		self.connection.close()

if __name__ == "__main__":
	"""
	logger = logging.getLogger(__name__)
	# Set the log level to LOG_LEVEL
	logger.setLevel(LOG_LEVEL)
	# Make a handler that writes to a file, making a new file at midnight and keeping 3 backups
	handler = logging.handlers.TimedRotatingFileHandler(LOG_FILENAME, when="midnight", backupCount=3)
	# Format each log message like this
	formatter = logging.Formatter('%(asctime)s %(levelname)-8s %(message)s')
	# Attach the formatter to the handler
	handler.setFormatter(formatter)
	# Attach the handler to the logger
	logger.addHandler(handler)

		# Replace stdout with logging to file at INFO level
	sys.stdout = MyLogger(logger, logging.INFO)
	# Replace stderr with logging to file at ERROR level
	sys.stderr = MyLogger(logger, logging.ERROR)
	"""

 
	exe = Handle()
	exe.run()